append styles
	// Custom styles for this template
	link(href='../css/signin.css', rel='stylesheet')
block body
	.container
		form.form-signin(method='post' action='/create' enctype='multipart/form-data')
			h2.form-signin-heading Create Article
			label.sr-only(for='title') Enter title
			input#inputText.form-control(type='text', name='title', placeholder=' write article title', required='', autofocus='')
			label.sr-only(for='description') Enter Description
			textarea.form-control(type='text', name='description', rows='5', placeholder='write article desctiption', required='', autofocus='')
			label.sr-only(for='inputImage') Choose image
			input.form-control(type='file', name='userPhoto', autofocus='')
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Add 
			a-btn.btn-lg.btn-warning.btn-block(href='/', title="cancel") Cancel


